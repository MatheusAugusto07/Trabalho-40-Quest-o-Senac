int temperaturaCelsius;
double temperaturaFahrenheit;

Console.Write("Digite a temperatura em graus Celsius: ");
temperaturaCelsius = Convert.ToInt32(Console.ReadLine());

temperaturaFahrenheit = temperaturaCelsius * 9.0 / 5.0 + 32;

Console.WriteLine("Temperatura em Fahrenheit: " + temperaturaFahrenheit.ToString("F2") + " ÂºF");
